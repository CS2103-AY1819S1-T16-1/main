<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="20" right="10" bottom="10" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="name" text="\$first" styleClass="detail_title_label" />
            </HBox>
            <FlowPane fx:id="tags" />
            <Label fx:id="savedAmount" styleClass="detail_label" text="\$savedAmount" />
            <Label fx:id="price" styleClass="detail_label" text="\$price" />
            <Label fx:id="url" styleClass="detail_label" text="\$url" />
            <Label fx:id="email" styleClass="detail_label" text="\$email" />
            <Label fx:id="remark" styleClass="detail_label" text="\$remark"/>

            <SplitPane id="wishDetailSplitPane" fx:id="splitPane" dividerPositions="0.4" VBox.vgrow="NEVER">
                <StackPane fx:id="wishSaveAmountPlaceholder" minWidth="340" prefWidth="340" SplitPane.resizableWithParent="false" >
                    <padding>
                        <Insets top="10" right="15" bottom="10" left="15" />
                    </padding>
                </StackPane>

                <StackPane fx:id="wishSaveHistoryPlaceholder" minWidth="340" prefWidth="340" SplitPane.resizableWithParent="false" >
                    <padding>
                        <Insets top="10" right="15" bottom="10" left="15" />
                    </padding>
                </StackPane>
            </SplitPane>
        </VBox>
    </GridPane>
</StackPane>
